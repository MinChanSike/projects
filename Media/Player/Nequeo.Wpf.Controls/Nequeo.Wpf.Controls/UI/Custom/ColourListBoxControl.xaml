<UserControl x:Class="Nequeo.Wpf.UI.Custom.ColourListBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nequeo.Wpf.UI.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Uid="RowDefinition_0" Height="Auto" />
            <RowDefinition x:Uid="RowDefinition_1" />
        </Grid.RowDefinitions>
        <TextBox x:Uid="TextBox_4" Grid.Row="0" Margin="0"  BorderThickness="0.75" Name="TextColorTextBox" IsTabStop="true" TabIndex="6" TextChanged="TextColorChanged" ></TextBox>
        <ListBox x:Uid="ListBox_4" Grid.Row="1" Margin="0"  BorderThickness="0.75" Name="TextColorListBox" IsTabStop="false" TabIndex="-1" Height="Auto" SelectionChanged="TextColorSelected" ></ListBox>
    </Grid>
</UserControl>
