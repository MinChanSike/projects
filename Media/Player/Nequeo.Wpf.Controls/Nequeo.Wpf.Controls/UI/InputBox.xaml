<Window x:Class="Nequeo.Wpf.UI.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nequeo.Wpf.UI"
        mc:Ignorable="d"
        Title="Input" Height="125" Width="645" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Stretch"  Margin="12,12,12,0" Name="textBox1" VerticalAlignment="Top" TabIndex="1" TextChanged="textBox1_TextChanged" />
        <Button Content="OK" x:Name="buttonOK" Margin="0,46,95,0" Height="23" HorizontalAlignment="Right"  VerticalAlignment="Top" TabIndex="2" Width="75" Click="buttonOK_Click" />
        <Button Content="Cancel" x:Name="buttonCancel" Margin="0,46,12,0" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" TabIndex="3" Width="75" Click="buttonCancel_Click" />
    </Grid>
</Window>
